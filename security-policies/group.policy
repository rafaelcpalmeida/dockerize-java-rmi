grant codeBase "${edu.ufp.sd.helloworld.activation.impl.codebase}" {
    // permission to read and write object's file
    permission java.io.FilePermission "${edu.ufp.sd.helloworld.activation.file}","read,write";
    // permission to listen on an anonymous port
    permission java.net.SocketPermission "*:1024-","accept";
};
